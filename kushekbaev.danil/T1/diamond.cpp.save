#include "diamond.hpp"
#include <cmath>
#include <stdexcept>
#include <array>

namespace kushekbaev
{

  double Diamond::getArea() const { return parallelogram_.getArea();
  }

  rectangle_t Diamond::getFrameRect() const { return parallelogram_.getFrameRect();
  }

  void Diamond::move(point_t scalePoint) { return parallelogram_.move(scalePoint);
